<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingTop="@dimen/activity_horizontal_margin"

    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/marginTen"
        android:weightSum="7">
        <ImageView
            android:id="@+id/wishlist_image_Id"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/piza"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:paddingTop="@dimen/fab_margin"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:orientation="vertical">
            <TextView
                android:id="@+id/wishlist_title_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/textSizeMarketPlace"
                android:text="@string/title_dominos"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginFive"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/wishlist_price_Id"
                    style="@style/customTextVerticalView"
                    android:textStyle="normal"
                    android:text="@string/price"/>
                <TextView
                    android:id="@+id/wishlist_pricePoints_Id"
                    android:layout_marginLeft="@dimen/marginTwenty"
                    style="@style/customTextVerticalView"
                    android:textColor="@color/fredeemColor"
                    android:text="@string/points"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginFive"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/wishlist_earn_Id"
                    style="@style/customTextVerticalView"
                    android:textStyle="normal"
                    android:text="@string/earn"/>
                <TextView
                    android:id="@+id/wishlist_earnPoints_Id"
                    android:layout_marginLeft="@dimen/marginTwenty"
                    style="@style/customTextVerticalView"
                    android:textColor="@color/earningColor"
                    android:text="@string/points_plus"/>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/wishlist_plusminus"
            android:layout_width="25dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:background="@drawable/border"
            android:weightSum="3"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="+"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="1"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="-"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/cancel_layout"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/marginFive"
            android:layout_width="20dp"
            android:layout_weight="2"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="X"
                android:textColor="@android:color/white"
                android:background="@android:color/holo_red_dark"
                android:gravity="center"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>