<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/product_title"
            android:layout_marginLeft="@dimen/marginTwenty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textStyle="bold"
            android:text="@string/foods"
            android:textSize="@dimen/textSizeMarketPlace"
             />
        <ImageView
            android:id="@+id/product_viewMore"
            android:layout_width="40dp"
            android:layout_marginLeft="@dimen/marginTen"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/view_more"
            android:text="@string/product_viewMore"
            android:layout_marginRight="@dimen/marginTen"
           />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTwenty"
        android:weightSum="3"
        android:visibility="visible"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/marginFive"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/productImageOne_Id"
                android:layout_marginLeft="@dimen/marginFive"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/piza"/>
            <TextView
                android:layout_marginTop="@dimen/marginTen"
                android:layout_marginLeft="@dimen/marginFive"
                android:id="@+id/productTitleOne_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/product_title"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginThirty"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/redeemTxtOne_Id"
                    style="@style/customTextVerticalView"
                    android:text="@string/product_redeemOne"/>
                <TextView
                    android:id="@+id/productpointOne_Id"
                    android:layout_marginLeft="@dimen/marginFive"
                    android:textColor="@color/fredeemColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/points"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginThirty"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/earningOne_Id"
                    style="@style/customTextVerticalView"
                    android:text="@string/product_EarningOne"/>
                <TextView
                    android:id="@+id/productEarningpointOne_Id"
                    android:layout_marginLeft="@dimen/marginFive"
                    android:textColor="@color/earningColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/points"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/marginFive"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/productImageTwo_Id"
                android:layout_marginLeft="@dimen/marginFive"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/piza_one"/>
            <TextView
                android:layout_marginTop="@dimen/marginTen"
                android:layout_marginLeft="@dimen/marginFive"
                android:id="@+id/productTitleTwo_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/product_title"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginThirty"

                android:orientation="horizontal">
                <TextView
                    android:id="@+id/redeemTxtTwo_Id"
                    style="@style/customTextVerticalView"
                    android:text="@string/product_redeemOne"/>
                <TextView
                    android:id="@+id/productpointTwo_Id"
                    android:layout_marginLeft="@dimen/marginFive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/fredeemColor"
                    android:text="@string/points"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginThirty"

                android:orientation="horizontal">
                <TextView
                    android:id="@+id/earningTwo_Id"
                    style="@style/customTextVerticalView"
                    android:text="@string/product_EarningOne"/>
                <TextView
                    android:id="@+id/productEarningpointTwo_Id"
                    android:layout_marginLeft="@dimen/marginFive"
                    android:layout_width="wrap_content"
                    android:textColor="@color/earningColor"
                    android:layout_height="wrap_content"
                    android:text="@string/points"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/marginFive"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/productImageThree_Id"
                android:layout_marginLeft="@dimen/marginFive"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/piza_image"/>
            <TextView
                android:layout_marginTop="@dimen/marginTen"
                android:layout_marginLeft="@dimen/marginFive"
                android:id="@+id/productTitleThree_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/product_title"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/marginThirty"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/redeemTxtThree_Id"
                    style="@style/customTextVerticalView"
                    android:text="@string/product_redeemOne"/>
                <TextView
                    android:id="@+id/productpointThree_Id"
                    android:layout_marginLeft="@dimen/marginFive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/fredeemColor"
                    android:text="@string/points"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginThirty"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/earningThree_Id"
                    style="@style/customTextVerticalView"
                    android:text="@string/product_EarningOne"/>
                <TextView
                    android:id="@+id/productEarningpointThree_Id"
                    android:layout_marginLeft="@dimen/marginFive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/earningColor"
                    android:text="@string/points"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!--for two views-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTwenty"
        android:weightSum="2"
        android:visibility="gone"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/specialOfferImageOne_Id"
                android:layout_marginLeft="@dimen/marginFive"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/bobymaster"/>
            <TextView
                android:layout_marginTop="@dimen/marginTen"
                android:layout_marginLeft="@dimen/marginFive"
                android:id="@+id/specialOfferTitleOne_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/product_title"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginThirty"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/redeem_specialOfferTxtOne_Id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/product_redeemOne"/>
                <TextView
                    android:id="@+id/specialOfferpointOne_Id"
                    android:layout_marginLeft="@dimen/marginFive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/points"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginThirty"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/specialOfferearningOne_Id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/product_EarningOne"/>
                <TextView
                    android:id="@+id/specialOfferproductEarningpointOne_Id"
                    android:layout_marginLeft="@dimen/marginFive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/points"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/specialOfferImageTwo_Id"
                android:layout_marginLeft="@dimen/marginFive"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/worldtour"/>
            <TextView
                android:layout_marginTop="@dimen/marginTen"
                android:layout_marginLeft="@dimen/marginFive"
                android:id="@+id/specialOfferTitleTwo_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/product_title"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginThirty"
                android:layout_marginLeft="@dimen/marginFive"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/redeem_specialOfferTxtTwo_Id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/product_redeemOne"/>
                <TextView
                    android:id="@+id/specialOfferpointTwo_Id"
                    android:layout_marginLeft="@dimen/marginFive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/points"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginThirty"
                android:layout_marginLeft="@dimen/marginFive"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/specialOfferearningTwo_Id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/product_EarningOne"/>
                <TextView
                    android:id="@+id/specialOfferproductEarningpointTwo_Id"
                    android:layout_marginLeft="@dimen/marginFive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/points"/>

            </LinearLayout>

        </LinearLayout>


        </LinearLayout>




</LinearLayout>