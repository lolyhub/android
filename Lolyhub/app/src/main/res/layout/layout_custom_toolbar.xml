<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/marginTen"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/marginFive"
        android:paddingBottom="@dimen/marginFive"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/toolbar_logo_Id"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:src="@drawable/logo"/>
        <ImageView
            android:id="@+id/toolbar_serach_Id"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/toolbar_logo_Id"
            android:layout_marginLeft="@dimen/marginTwenty"
            android:src="@drawable/search"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/toolbar_logo_Id"
            android:layout_marginLeft="@dimen/marginTwenty"
            android:text="@string/search"
            android:layout_gravity="center"
            android:layout_below="@+id/toolbar_serach_Id"/>

        <LinearLayout
            android:id="@+id/toolbar_wallet_container"
            android:layout_toRightOf="@+id/toolbar_serach_Id"
            android:layout_marginLeft="@dimen/marginThirty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/toolbar_wallet_Id"
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:text="454"
                android:textColor="#fff"
                android:textSize="@dimen/textSize"
                android:background="@drawable/wallet_circularshape"
                android:gravity="center_vertical|center_horizontal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wallet"
                android:layout_gravity="center"
                android:layout_below="@+id/toolbar_serach_Id"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/toolbar_wishlist_container"
            android:layout_toRightOf="@+id/toolbar_wallet_container"
            android:layout_marginLeft="@dimen/marginTwenty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/toolbar_wishlist_Id"
                android:layout_height="30dp"
                android:layout_width="30dp"

                android:text="42"
                android:textColor="#fff"
                android:textSize="@dimen/textSize"
                android:background="@drawable/wishlist_circular"
                android:gravity="center_vertical|center_horizontal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wishlist"
                android:layout_gravity="center"
                android:layout_below="@+id/toolbar_serach_Id"/>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/toolbar_cart_container"
            android:layout_toRightOf="@+id/toolbar_wishlist_container"
            android:layout_marginLeft="@dimen/marginTwenty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/toolbar_cart_Id"
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:text="12"
                android:textColor="#fff"
                android:textSize="@dimen/textSize"
                android:background="@drawable/cart_circular"
                android:gravity="center_vertical|center_horizontal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cart"
                android:layout_gravity="center"
                android:layout_below="@+id/toolbar_serach_Id"/>
        </LinearLayout>




    </RelativeLayout>


</LinearLayout>