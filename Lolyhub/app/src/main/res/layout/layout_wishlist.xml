<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/wishlist_image_Id"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:src="@drawable/piza"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/wishlist_image_Id"
        android:layout_marginLeft="@dimen/marginTen"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/wishlist_detail_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/fab_margin"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:orientation="vertical">
            <TextView
                android:id="@+id/wishlist_title_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/textSizeMarketPlace"
                android:text="@string/title_dominos"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginTwenty"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/wishlist_price_Id"
                    style="@style/customTextVerticalView"
                    android:textStyle="normal"
                    android:text="@string/price"/>
                <TextView
                    android:id="@+id/wishlist_pricePoints_Id"
                    android:layout_marginLeft="@dimen/marginTwenty"
                    style="@style/customTextVerticalView"
                    android:textColor="@color/fredeemColor"
                    android:text="@string/points"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginTwenty"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/wishlist_earn_Id"
                    style="@style/customTextVerticalView"
                    android:textStyle="normal"
                    android:text="@string/earn"/>
                <TextView
                    android:id="@+id/wishlist_earnPoints_Id"
                    android:layout_marginLeft="@dimen/marginTwenty"
                    style="@style/customTextVerticalView"
                    android:textColor="@color/earningColor"
                    android:text="@string/points_plus"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginTwenty"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/wishlist_move_Id"
                    style="@style/customTextVerticalView"
                    android:textStyle="normal"
                    android:text="@string/move_to_cart"/>
                <CheckBox
                    android:id="@+id/wishlist_moveCheck_Id"
                    android:layout_marginLeft="@dimen/marginTwenty"
                    style="@style/customTextVerticalView"
                    android:textStyle="normal"
                    android:text="@string/price"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_toRightOf="@id/wishlist_detail_container"
            android:id="@+id/cancel_layout"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:text="X"
                android:textColor="@android:color/white"
                android:background="@android:color/holo_red_dark"
                android:gravity="center"/>

        </LinearLayout>
    </LinearLayout>



</RelativeLayout>