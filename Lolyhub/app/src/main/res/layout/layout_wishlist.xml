<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:weightSum="6">
        <ImageView
            android:id="@+id/wishlist_image_Id"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/piza"/>
        <LinearLayout
            android:id="@+id/detail_catainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginLeft="@dimen/marginFive"
            android:paddingTop="@dimen/fab_margin"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:orientation="vertical">
            <TextView
                android:id="@+id/wishlist_title_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize"

                android:text="@string/title_dominos"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginFive"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/wishlist_price_Id"
                    style="@style/customTextVerticalView"

                    android:text="@string/price"/>
                <TextView
                    android:id="@+id/wishlist_pricePoints_Id"
                    android:layout_marginLeft="@dimen/marginTwenty"
                    style="@style/customTextVerticalView"
                    android:textColor="@color/fredeemColor"
                    android:text="@string/points"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginFive"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/wishlist_earn_Id"
                    style="@style/customTextVerticalView"

                    android:text="@string/earn"/>
                <TextView
                    android:id="@+id/wishlist_earnPoints_Id"
                    android:layout_marginLeft="@dimen/marginTwenty"
                    style="@style/customTextVerticalView"
                    android:textColor="@color/earningColor"
                    android:text="@string/points_plus"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginFive"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/wishlist_move_Id"
                    style="@style/customTextVerticalView"

                    android:text="@string/move_to_cart"/>
                <RadioButton
                    android:id="@+id/wishlist_moveCheck_Id"
                    android:layout_marginLeft="@dimen/marginTwenty"
                    style="@style/customTextVerticalView"

                    />
            </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:id="@+id/cancel_layout"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="X"
                android:textColor="@android:color/white"
                android:background="@android:color/holo_red_dark"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>