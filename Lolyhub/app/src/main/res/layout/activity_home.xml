<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">
    <include layout="@layout/app_bar_home" />

<android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
         >
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/bottomLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="@dimen/textSize"
            android:background="@color/wishlist_button_color"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:text="@string/move_items"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/navigation_item_list"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/marginTwenty"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
        <View
            android:layout_below="@+id/navigation_item_list"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/grey"/>
        <LinearLayout
            android:id="@+id/cart_items_container"
            android:layout_above="@+id/bottomLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/first_View_id"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:background="@color/grey"
                android:layout_height="0.2dp"/>
            <RelativeLayout
                android:id="@+id/total_rel_container"
                android:visibility="gone"
                android:orientation="horizontal"
                android:padding="@dimen/marginTen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_totaltxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total_lp"/>
                <TextView
                    android:id="@+id/txt_pointstxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cart_points"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="end"
                    android:textColor="@color/fredeemColor"/>
           </RelativeLayout>
            <View
                android:id="@+id/second_View_id"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:background="@color/grey"
                android:layout_height="0.2dp"/>
            <RelativeLayout
                android:id="@+id/earn_rel_caontainer"
                android:orientation="horizontal"
                android:visibility="gone"
                android:padding="@dimen/marginTen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_earningtxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total_Earn"/>
                <TextView
                    android:id="@+id/earningpoints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cart_poits_plus"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="end"
                    android:textColor="@color/earningColor"/>
            </RelativeLayout>



        </LinearLayout>
    </RelativeLayout>



</android.support.design.widget.NavigationView>



</android.support.v4.widget.DrawerLayout>

