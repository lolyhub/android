<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="@dimen/registration_layout_margin"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="@dimen/boldSizeText"
        android:textStyle="bold"
        android:text="@string/login"/>
    <EditText
        android:id="@+id/edit_userMobile"
        style="@style/CustomSignUpEdittext"
        android:hint="@string/usernameMobile"
        android:layout_marginTop="@dimen/login_layaout_height"/>
    <EditText
        android:id="@+id/edit_userPassword"
        android:layout_marginTop="@dimen/marginTen"
        style="@style/CustomSignUpEdittext"
        android:hint="@string/password"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/marginTen"
        android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_forgotPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize"
                android:text="@string/forgotpassword"/>
        <TextView
            android:id="@+id/txt_pressHere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize"
            android:layout_marginLeft="@dimen/marginTen"
            android:layout_toRightOf="@id/txt_forgotPass"
            android:text="@string/pressHere"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_marginTop="@dimen/marginTwenty"
        android:layout_width="match_parent"
        android:layout_height="@dimen/loginLogoutButtonSize"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_button"
        android:textSize="@dimen/textSize"
        android:text="@string/login"/>
    <TextView
        android:layout_marginTop="@dimen/marginTwenty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/or"
        android:textSize="@dimen/orTextSize"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTwenty"
        android:weightSum="3"
        android:orientation="horizontal">
            <ImageView
                android:id="@+id/fbLogin_ID"
                style="@style/SocialLoginButton"
                android:layout_marginRight="@dimen/marginFive"
                android:src="@drawable/facbook"/>
            <ImageView
                android:id="@+id/gplusLogin_ID"
                style="@style/SocialLoginButton"
                android:layout_marginRight="@dimen/marginFive"
                android:src="@drawable/gplus"/>
            <ImageView
                android:id="@+id/twitterLogin_ID"
                style="@style/SocialLoginButton"
                android:src="@drawable/twitter"/>

    </LinearLayout>

</LinearLayout>