<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_marginTop="60dp"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/switchbutton_id"
        android:layout_width="@dimen/productscreen_listswitch_size"
        android:layout_height="@dimen/productscreen_listswitch_size"
        android:src="@drawable/filter"
        />
    <ImageView
        android:id="@+id/filter_id"
        android:layout_width="@dimen/productscreen_listswitch_size"
        android:layout_height="@dimen/productscreen_listswitch_size"
        android:src="@drawable/sort"
        android:layout_alignParentRight="true"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/productdetail_listview"
        android:layout_below="@+id/filter_id"
        android:layout_marginTop="@dimen/productscreen_listview_margintop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
</RelativeLayout>