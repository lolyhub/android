<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/id_lolyLogo"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"/>

    <LinearLayout
        android:id="@+id/id_container"
        android:layout_below="@id/id_lolyLogo"
        android:layout_marginTop="@dimen/signup_spacing_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/signin_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="@dimen/signin_padding"
                android:text="@string/signin"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/signup_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="@dimen/signin_padding"
                android:text="@string/signUp"/>

        </RelativeLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_below="@+id/id_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            android:id="@+id/id_loginLayout"
            layout="@layout/layout_login"
            android:visibility="gone"/>

        <include
            android:id="@+id/id_signupLayout"
            layout="@layout/layout_signup"
            android:visibility="gone"/>

    </RelativeLayout>


</RelativeLayout>