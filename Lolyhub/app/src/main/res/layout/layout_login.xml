<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="@dimen/activity_horizontal_margin"
    android:layout_height="match_parent">
    <ProgressBar
        android:id="@+id/login_progress_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        style="?android:attr/progressBarStyleLarge"
        android:layout_marginTop="@dimen/marginTwenty"
        android:layout_centerInParent="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <EditText
            android:id="@+id/edit_userMobile"
            style="@style/CustomSignUpEdittext"
            android:hint="@string/usernameMobile"
           />
        <EditText
            android:id="@+id/edit_userPassword"
            android:layout_marginTop="@dimen/marginTen"
            style="@style/CustomSignUpEdittext"
            android:hint="@string/password">
        </EditText>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/marginTen"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_forgotPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blueColor"
                android:textSize="@dimen/textSize"
                android:text="@string/forgotpassword"/>
            <TextView
                android:id="@+id/txt_pressHere"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blueColor"
                android:textSize="@dimen/textSize"
                android:layout_marginLeft="@dimen/marginTen"
                android:layout_toRightOf="@id/txt_forgotPass"
                android:text="@string/pressHere"
                />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_marginTop="@dimen/marginTwenty"
            android:layout_width="match_parent"
            android:layout_height="@dimen/loginLogoutButtonSize"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_button"
            android:textSize="@dimen/textSize"
            android:text="@string/login"/>
        <TextView
            android:layout_marginTop="@dimen/marginTwenty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/or"
            android:textSize="@dimen/orTextSize"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginTwenty"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/fbLogin_ID"
                style="@style/SocialLoginButton"
                android:layout_width="match_parent"
                android:src="@drawable/facbook"/>
            <ImageView
                android:id="@+id/gplusLogin_ID"
                style="@style/SocialLoginButton"
                android:layout_marginTop="@dimen/loginbtn_margintop"
                android:layout_width="match_parent"
                android:src="@drawable/gplus"/>

        </LinearLayout>

        <Button
            android:visibility="gone"
            android:id="@+id/gplus_signout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginTwenty"
            android:layout_gravity="center"
            android:text="Gplus sign out "/>
        <Button
            android:visibility="gone"
            android:id="@+id/fbSignOut_signout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="fb  sign out "/>
    </LinearLayout>


</RelativeLayout>